{
  "name": "workhub",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "description": "Workhub Desktop Client",
  "author": "The Tech Company",
  "main": "public/electron.js",
  "dependencies": {
    "cross-env": "^7.0.3",
    "electron-is-dev": "^1.2.0",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "cd webui && unzip webui.zip",
    "react-install": "cd webui && yarn install",
    "react-start": "cd webui && react-scripts start",
    "react-build": "cd webui && react-scripts build",
    "electron-start": "electron .",
    "electron-build": "electron-builder",
    "electron-pack": "electron-builder build",
    "prelectron-pack": "cd webui && yarn build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "build": {
    "appId": "services.workhub.desktop",
    "icon": "icons/png/256x256.png",
    "files": [
      "webui/build/**/*",
      "node_modules/**/*",
      "public/**/*"
    ],
    "publish": [
      "github"
    ],
    "mac": {
      "icon": "icons/mac/icon.icns"
    },
    "linux": {
      "icon": "icons/png/256x256.png"
    },
    "directories": {
      "buildResources": "assets"
    },
    "extends": null
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "electron": "^11.0.3",
    "electron-builder": "^22.9.1",
    "electron-icon-maker": "^0.0.5",
    "wait-on": "^5.2.0"
  }
}
